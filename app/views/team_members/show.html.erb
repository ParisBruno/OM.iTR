<%= render 'shared/page_title', title: "#{@team_member.full_name}'s profile" %>

<div class="row">
  <div class="col-lg-12 chef-main chef-full chef-main-detail bio-section chef-bio">
    <div class="col-md-3">
      <div class="image-box-shadow chef-left">
        <center><%= image_tag(@team_member.avatar.url, size: '300x300', alt: 'No image') if @team_member.avatar? %></center>
      </div>
    </div>
    <div class="col-md-9">
      <div class="well box-content box-main chef-right">
        <div class="bios">
            <h2 style="word-break: normal !important;">
              <%= !@team_member.bio.nil? ? @team_member.bio.html_safe : "" %>
            </h2>
          </div>
        </div>
      </div>
  </div>
  <div class="col-lg-12 text-right">
    <%= link_to t('team_members.edit_profile'), edit_team_team_member_path(@team_member.team, @team_member), class: "btn btn-success pull-right btn-edit btn-lg", style: "margin-right:50px;" %>
    <% if current_user.admin? %>
    
    <% end %>
  </div>
</div>
